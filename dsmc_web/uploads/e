#include <stdio.h>

void concat(int* arr1, int* arr2, int* arr3){
	//ta1[3]
	//ta2[4]
	//ta3[7] - tableau de copie des valeurs
	
	for (int i = 0; i < 3; i++){
		*arr3[i] = &arr1[i];
	}
	for (int i = 3; i < 7; i++){
		*arr3[i] = &arr2[i - 3];
	}
	for (int i = 0; i < 7; i++){
		if (i == 6) printf("%d\n", arr3[i]);
		else printf("%d", &arr3[i]);
	}
}

int main(){
	int* arr1[3]; 
	&arr1[0] = 0; &arr1[1] = 1; &arr1[2] = 2;
	int* arr2[4];
	&arr2[0] = 3; &arr2[1] = 4; &arr2[2] = 5; &arr2[3] = 6;
	int* arr3[7];
	concat(arr1, arr2, arr3);
	return 0;
}


